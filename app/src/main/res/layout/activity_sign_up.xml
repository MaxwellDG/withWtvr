<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slate_background"
    tools:context=".signUp">

    <EditText
        android:id="@+id/signUser"
        style="@style/informationFields"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName|textCapSentences|textCapWords"
        android:maxLength="25"
        android:textColorHint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createText" />

    <EditText
        android:id="@+id/signPass"
        style="@style/informationFields"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/signUser"
        app:layout_constraintStart_toStartOf="@+id/signUser"
        app:layout_constraintTop_toBottomOf="@+id/signUser" />

    <EditText
        android:id="@+id/signEmail"
        style="@style/informationFields"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="E-mail address"
        android:inputType="textWebEmailAddress|textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/signUser"
        app:layout_constraintStart_toStartOf="@+id/signUser"
        app:layout_constraintTop_toBottomOf="@+id/signPass2" />

    <EditText
        android:id="@+id/signPass2"
        style="@style/informationFields"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Retype password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/signUser"
        app:layout_constraintStart_toStartOf="@+id/signUser"
        app:layout_constraintTop_toBottomOf="@+id/signPass" />

    <TextView
        android:id="@+id/createText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="Account info:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/signUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signUser"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/createButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/signup_field"
        android:fontFamily="casual"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="#E2E3D3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="149dp"
        android:layout_height="113dp"
        android:src="@drawable/wwicon_whiteandyellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>